{
  "manifest_version": 3,
  "name": "mCal AI Events",
  "version": "1.0",
  "description": "Add AI-generated events to your calendar based on your clipboard content.",
  "host_permissions": [
    "http://localhost:8000/"
  ],
  "permissions": [
    "clipboardRead"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png"
  }
}
